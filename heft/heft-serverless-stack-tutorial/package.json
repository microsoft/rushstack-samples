{
  "name": "heft-serverless-stack-tutorial",
  "description": "Illustrates how to use the Serverless Stack plugin for Heft",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "heft test --clean",
    "start": "heft build-watch --sst",
    "build": "heft build --clean",
    "deploy": "sst deploy",
